{% extends 'base.html.twig' %}

{% block body %}

    <h1>Edit a post</h1>

    <form action="{{ path('post_save') }}" method="post" class="bg-gray-100 rounded container mx-auto">
        <p>
            <span class="field size-1">
                <label for="title">Title:</label>
                <input type="text" name="title" id="title" value="{{ post.title|e('html_attr') }}" size="80" autofocus />
            </span>
        </p>
        <p>
            <span class="field size-1">
                <label for="date">Date (UTC):</label>
                <input type="text" name="date" id="date" value="{{ post.date.format('Y-m-d H:i')|e('html_attr') }}" />
            </span>
            <span class="field size-1">
                <label for="author">Author:</label>
                <input type="text" name="author" list="contacts" id="author"
                       value="{% if post.author %}{{ post.author.name|e('html_attr') }}{% endif %}"
                />
                <datalist id="contacts">
                    {% for contact in contacts %}
                        <option>{{ contact.name }}</option>
                    {% endfor %}
                </datalist>
            </span>
        </p>
        <p>
            <span class="field size-1">
                <label for="body" class="block">Body:</label>
                <textarea name="body" id="body" rows="15" cols="120">{{ post.body }}</textarea>
            </span>
        </p>
        <p>
            <span><input type="submit" name="save" value="Save" class="" /></span>
            {% if post.id %}
                <span><a href="{{ path('post_view', {id:post.id}) }}">Cancel</a></span>
                <input type="hidden" name="id" value="{{ post.id }}" />
            {% endif %}
        </p>

    </form>

{% endblock %}
