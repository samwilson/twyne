{% extends 'base.html.twig' %}

{% block title %}Edit tag {{ tag.id }}{% endblock %}

{% block body %}

    <h1>Editing <a href="{{ path('tag_view', {id:tag.id}) }}">tag {{ tag.id }}</a></h1>

    <form action="{{ path('tag_save') }}" method="post">
        <p>
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" value="{{ tag.title }}" />
        </p>
        <div class="fields">
            <span class="field size-1">
                <label for="wikidata">Wikidata ID:</label>
                <input type="text" id="wikidata" name="wikidata" value="{{ tag.wikidata }}" />
            </span>
            <span class="field size-4">
                <label for="wikidata-label">Wikidata lookup:</label>
                <input type="text" id="wikidata-label" spellcheck="false" autocomplete="off" />
            </span>
        </div>
        <p>
            <label for="description">Description:</label>
            <textarea name="description" id="description" rows="12">{{ tag.description }}</textarea>
        </p>
        <p>
            <input type="hidden" name="id" value="{{ tag.id }}" />
            <input type="submit" value="Save" />
        </p>
    </form>

{% endblock %}
